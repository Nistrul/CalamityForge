if encounters
  div.encounterTablePanelRow
    p.table-header= 'Encounters for ' + encounters.xp + ' XP'
  div.encounterTablePanelRow.encounterTableContainerInner
    table#encounterTable.table.encounterTable
      thead.encounterTableHead
        tr.encounterTableRow
          th.myDiceRollColumn Roll
          th.myCRColumn CR A
          th.myCRColumn CR B
          th.myCRColumn CR C
          th.myXPColumn XP
          if debugging
            th.text-right XPTol
            th.text-right Grps
            th.text-right Pwr
            th.text-right Num
            th.text-right Weight
      tbody.encounterTableBody
        each val in encounters
          tr.encounterTableRow(data-low=val.low, data-high=val.high)
            td.myDiceRollColumn= val.rollText
            if val.creatureGroups[0].num > 1
              td.myCRColumn= val.creatureGroups[0].num + 'x ' + val.creatureGroups[0].cr
            else
              td.myCRColumn= val.creatureGroups[0].cr
      
            if val.creatureGroups[1]
              if val.creatureGroups[1].num > 1
                td.myCRColumn= val.creatureGroups[1].num + 'x ' + val.creatureGroups[1].cr
              else
                td.myCRColumn= val.creatureGroups[1].cr
            else
              td

            if val.creatureGroups[2]
              if val.creatureGroups[2].num > 1
                td.myCRColumn= val.creatureGroups[2].num + 'x ' + val.creatureGroups[2].cr
              else
                td.myCRColumn= val.creatureGroups[2].cr
            else
              td
            td.myXPColumn= val.xp
            if debugging
              td.text-right= Math.round(val.factors.xpTolerance * 10) / 10
              td.text-right= val.factors.numberOfGroups
              td.text-right= val.factors.mostPowerfulCreature
              td.text-right= val.factors.numberOfCreatures
              td.text-right= val.weight
  div.encounterTablePanelRow
    button(type='button' onclick='rollOnTable(\'#rollDisplay1\')') Roll
    input.rollDisplay#rollDisplay1(readonly='true')